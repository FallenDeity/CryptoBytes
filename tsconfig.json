{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./types",
		"removeComments": true,
		"moduleResolution": "Node",
		"alwaysStrict": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist", "types"]
}
